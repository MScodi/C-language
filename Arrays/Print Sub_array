//print sub arrays
#include <algorithm>
#include <iostream>
using namespace std;

//function defination
int sub(int a[], int n){
    int sum=0;
    for(int i=0; i<n; i++){
        for(int j=i;j<n; j++){
           for(int k=i; k<=j; k++){
            cout<<a[k];
            }
        cout<<endl;    
        }
    }
   
}
//main function
int main()
{
    int arr[] = { 1,2,0,7,2};
    int n = sizeof(arr) / sizeof(arr[0]), k = 2;
    sub(arr, n);
    return 0;
}
